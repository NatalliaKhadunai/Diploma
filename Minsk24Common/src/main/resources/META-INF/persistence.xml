<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="DIPLOMA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.minsk24.bean.Article</class>
        <class>com.minsk24.bean.Account</class>
        <class>com.minsk24.bean.Comment</class>
        <class>com.minsk24.bean.Tag</class>
        <class>com.minsk24.bean.Event</class>
        <class>com.minsk24.bean.UserBeforeEventRate</class>
        <class>com.minsk24.bean.UserAfterEventRate</class>
        <class>com.minsk24.bean.Advertisement</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.OracleDriver"/>
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@//localhost:1521/XE"/>
            <property name="hibernate.connection.username" value="diploma"/>
            <property name="hibernate.connection.password" value="12345"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>